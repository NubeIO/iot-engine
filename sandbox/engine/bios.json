                      },
                      {
                        "credential": {
                          "type": "BASIC",
                          "user": "admin",
                          "password": "admin123"
                        },
                        "url": "http://nexus:8081/repository/maven-snapshots/"
                      },
                      {
                        "credential": {
                          "type": "BASIC",
