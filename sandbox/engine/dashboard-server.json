{
  "dataDir": "/data",
  "__system__": {
    "__eventBus__": {
      "ssl": true,
      "keyStoreOptions": {
        "path": "eventBusKeystore.jks",
        "password": "nubesparkEventBus"
      },
      "trustStoreOptions": {
        "path": "eventBusKeystore.jks",
        "password": "nubesparkEventBus"
      }
    },
    "__cluster__": {
      "active": true,
      "ha": true
    }
  },
  "__app__": {
    "__micro__": {
      "__gateway__": {
        "enabled": true,
        "clusterAnnounceMonitorClass": "com.nubeiot.core.http.gateway.RouterAnnounceListener"
      },
      "__serviceDiscovery__": {
        "enabled": true
      },
      "__localServiceDiscovery__": {
        "enabled": false
      },
      "__circuitBreaker__": {
        "enabled": true,
        "options": {
          "timeout": 20000
        }
      }
    },
    "__http__": {
      "port": 8080,
      "publicScheme": "HTTP",
      "__rest__": {
        "rootApi": "/api",
        "__dynamic__": {
          "enabled": true,
          "path": ""
        }
      },
      "__cors__": {
        "allowedHeaders": [
          "Access-Control-Request-Method",
          "Access-Control-Allow-Credentials",
          "Access-Control-Allow-Origin",
          "Access-Control-Allow-Headers",
          "Content-Type",
          "origin",
          "x-requested-with",
          "accept",
          "X-PINGARUNER",
          "Site-Id",
          "Authorization",
          "JSESSIONID"
        ]
      },
      "__files__": {
        "enabled": true,
        "dir": "media",
        "__upload__": {
          "enabled": true,
          "path": "/api/media_file",
          "maxBodySizeMB": 5,
          "listenerClass": "com.nubeiot.dashboard.DashboardUploadListener"
        },
        "__download__": {
          "enabled": true,
          "path": "/media"
        }
      }
    },
    "__dashboardServer__": {
      "dittoPolicy": false
    },
    "keycloak": {
      "realm": "sandbox",
      "auth-server-url": "http://keycloak:8080/auth",
      "ssl-required": "external",
      "resource": "sandbox-client",
      "credentials": {
        "secret": "69be18ef-e43d-4840-8d02-eeaa5573a488"
      },
      "confidential-port": 0
    },
    "mongo": {
      "hosts": [
        {
          "host": "mongo",
          "port": 27017
        }
      ],
      "db_name": "sandbox",
      "username": "sandbox",
      "password": "111",
      "authSource": "sandbox",
      "maxPoolSize": 25,
      "minPoolSize": 10,
      "maxIdleTimeMS": 300000,
      "maxLifeTimeMS": 3600000,
      "maintenanceFrequencyMS": 2000,
      "maintenanceInitialDelayMS": 500,
      "waitQueueMultiple": 10
    }
  }
}
