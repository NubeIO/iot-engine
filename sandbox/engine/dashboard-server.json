      "dittoPolicy": false
    },
    "keycloak": {
      "realm": "nube_iot",
      "auth-server-url": "http://localhost:8082/auth",
      "ssl-required": "external",
      "resource": "nube-web-api-gateway",
      "credentials": {
        "secret": "b3088f82-9b73-49c8-a89b-94102ede802c"
      },
      "confidential-port": 0,
      "policy-enforcer": {}
    },
    "mongo": {
      "hosts": [
        {
          "host": "localhost",
          "port": 27017
        }
      ],
      "db_name": "nube",
      "username": "root",
      "password": "root",
      "authSource": "admin",
      "maxPoolSize": 50,
      "minPoolSize": 25,
      "maxIdleTimeMS": 300000,
      "maxLifeTimeMS": 3600000,
      "maintenanceFrequencyMS": 2000,
      "maintenanceInitialDelayMS": 500,
      "waitQueueMultiple": 100
    }
  }
}
